import 'package:flutter/material.dart';

class BankOverviewScreen extends StatelessWidget {
  const BankOverviewScreen({super.key});

  @override
  Widget build(BuildContext context) {
    final width = MediaQuery.of(context).size.width;

    return Scaffold(
      backgroundColor: Colors.black,
      body: SafeArea(
        child: Center(
          child: SingleChildScrollView(
            child: Padding(
              padding: const EdgeInsets.symmetric(horizontal: 20, vertical: 24),
              child: ConstrainedBox(
                constraints: BoxConstraints(maxWidth: width < 500 ? width : 420),
                child: Column(
                  crossAxisAlignment: CrossAxisAlignment.stretch,
                  children: [
                    const SizedBox(height: 8),
                    const _TopCard(),
                    const SizedBox(height: 20),
                    const _CardsStack(),
                    const SizedBox(height: 20),
                    const _TransactionsSection(),
                  ],
                ),
              ),
            ),
          ),
        ),
      ),
    );
  }
}

class _TopCard extends StatelessWidget {
  const _TopCard({Key? key}) : super(key: key);

  // --- FUNÇÃO DE NOTIFICAÇÕES (Atualizada com Cores) ---
  void _showNotifications(BuildContext context) {
    showModalBottomSheet(
      context: context,
      backgroundColor: const Color(0xFF1C1C1E),
      shape: const RoundedRectangleBorder(
        borderRadius: BorderRadius.vertical(top: Radius.circular(24)),
      ),
      builder: (BuildContext context) {
        return Padding(
          padding: const EdgeInsets.all(20),
          child: Column(
            mainAxisSize: MainAxisSize.min,
            crossAxisAlignment: CrossAxisAlignment.start,
            children: [
              Row(
                mainAxisAlignment: MainAxisAlignment.spaceBetween,
                children: [
                  const Text(
                    "Notificações Recentes",
                    style: TextStyle(color: Colors.white, fontSize: 18, fontWeight: FontWeight.bold),
                  ),
                  IconButton(
                    onPressed: () => Navigator.pop(context),
                    icon: const Icon(Icons.close, color: Colors.white54),
                  )
                ],
              ),
              const SizedBox(height: 10),
              // Lista de notificações com as Cores Padrão
              Flexible(
                child: ListView(
                  shrinkWrap: true,
                  children: const [
                    _NotificationItem(
                      title: "Depósito Recebido",
                      subtitle: "Pix de João Silva",
                      amount: "+ R\$ 1.200,00",
                      icon: Icons.arrow_downward, // Entrada
                      color: Color(0xFF2DBF6A), // Verde
                    ),
                    _NotificationItem(
                      title: "Compra Aprovada",
                      subtitle: "Supermercado Extra",
                      amount: "- R\$ 450,20",
                      icon: Icons.restaurant, // Ícone de comida
                      color: Color(0xFF2DBF6A), // Verde (Igual ao card de Comida)
                    ),
                    _NotificationItem(
                      title: "Pagamento de Boleto",
                      subtitle: "Internet Fibra",
                      amount: "- R\$ 120,90",
                      icon: Icons.bolt, // Ícone de serviço
                      color: Color(0xFFCCB3E6), // Roxo (Igual ao card de Transporte)
                    ),
                    _NotificationItem(
                      title: "Cashback",
                      subtitle: "Bonus da fatura",
                      amount: "+ R\$ 12,50",
                      icon: Icons.local_offer,
                      color: Color(0xFF2DBF6A), // Verde
                    ),
                  ],
                ),
              ),
            ],
          ),
        );
      },
    );
  }

  @override
  Widget build(BuildContext context) {
    return Container(
      decoration: BoxDecoration(
        color: const Color(0xFF111213),
        borderRadius: BorderRadius.circular(26),
      ),
      padding: const EdgeInsets.fromLTRB(18, 18, 18, 24),
      child: Column(
        crossAxisAlignment: CrossAxisAlignment.start,
        children: [
          Row(
            mainAxisAlignment: MainAxisAlignment.spaceBetween,
            children: [
              IconButton(
                onPressed: () {
                  Navigator.pushNamed(context, '/finance');
                },
                icon: const Icon(Icons.menu, color: Colors.white70),
                splashRadius: 20,
              ),
              IconButton(
                onPressed: () => _showNotifications(context),
                icon: const Icon(Icons.notifications_none, color: Colors.white70),
                splashRadius: 20,
              ),
            ],
          ),
          const SizedBox(height: 8),
          const Text('Seu saldo', style: TextStyle(color: Colors.white70, fontSize: 16)),
          const Text('R\$ 2.453,68', style: TextStyle(color: Colors.white, fontSize: 40, fontWeight: FontWeight.w500, letterSpacing: 1.2)),
          const SizedBox(height: 18),
          Row(
            children: [
              // ALTERAÇÃO: Botões mudaram para conversão de moeda (Euro e Dólar)
              Expanded(child: _YellowButton(icon: Icons.euro, label: 'Euro')),
              const SizedBox(width: 12),
              Expanded(child: _YellowButton(icon: Icons.attach_money, label: 'Dólar')),
            ],
          ),
        ],
      ),
    );
  }
}

class _YellowButton extends StatelessWidget {
  final IconData icon;
  final String label;
  const _YellowButton({required this.icon, required this.label, Key? key}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return ElevatedButton(
      style: ElevatedButton.styleFrom(
        backgroundColor: const Color(0xFFF3C300),
        foregroundColor: Colors.black87,
        shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(30)),
        padding: const EdgeInsets.symmetric(vertical: 14),
        elevation: 0,
      ),
      onPressed: () {},
      child: Row(
        mainAxisAlignment: MainAxisAlignment.center,
        children: [
          Icon(icon, size: 18),
          const SizedBox(width: 8),
          Text(label, style: const TextStyle(fontSize: 16, fontWeight: FontWeight.w600)),
        ],
      ),
    );
  }
}

class _CardsStack extends StatelessWidget {
  const _CardsStack({Key? key}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return Column(
      crossAxisAlignment: CrossAxisAlignment.start,
      children: [
        const Text('Seus cartões', style: TextStyle(color: Colors.white70, fontSize: 16)),
        const SizedBox(height: 12),
        SizedBox(
          height: 190,
          child: Stack(
            children: [
              Positioned(
                left: 12,
                top: 18,
                child: _CardChip(
                  color: const Color(0xFF2B2B2B),
                  label: 'EUR',
                  width: 340,
                ),
              ),
              Positioned(
                left: 0,
                child: _CardChip(
                  color: const Color(0xFF3D99FF),
                  label: 'USD',
                  width: 360,
                  showDetails: true,
                ),
              ),
            ],
          ),
        ),
      ],
    );
  }
}

class _CardChip extends StatelessWidget {
  final Color color;
  final String label;
  final double width;
  final bool showDetails;
  const _CardChip({required this.color, required this.label, required this.width, this.showDetails = false, Key? key})
      : super(key: key);

  @override
  Widget build(BuildContext context) {
    return Container(
      width: width > MediaQuery.of(context).size.width ? MediaQuery.of(context).size.width - 40 : width,
      height: 170,
      decoration: BoxDecoration(
        color: color,
        borderRadius: BorderRadius.circular(14),
      ),
      padding: const EdgeInsets.all(16),
      child: showDetails
          ? _CardDetails(label: label)
          : Align(alignment: Alignment.topRight, child: Text(label, style: const TextStyle(color: Colors.white70))),
    );
  }
}

class _CardDetails extends StatelessWidget {
  final String label;
  const _CardDetails({required this.label, Key? key}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return Column(
      crossAxisAlignment: CrossAxisAlignment.start,
      children: [
        Row(
          mainAxisAlignment: MainAxisAlignment.spaceBetween,
          children: [
            Row(
              children: const [
                CircleAvatar(radius: 8, backgroundColor: Colors.orange),
                SizedBox(width: 6),
                CircleAvatar(radius: 8, backgroundColor: Colors.yellow),
              ],
            ),
            Text(label, style: const TextStyle(color: Colors.white70)),
          ],
        ),
        const Spacer(),
        const Text('José Roberto', style: TextStyle(color: Colors.white, fontSize: 16, fontWeight: FontWeight.w600)),
        const SizedBox(height: 6),
        const Text('5276 5786 6758 9090', style: TextStyle(color: Colors.white70, letterSpacing: 1.5)),
      ],
    );
  }
}

class _TransactionsSection extends StatelessWidget {
  const _TransactionsSection({Key? key}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return Column(
      crossAxisAlignment: CrossAxisAlignment.start,
      children: [
        Row(
          mainAxisAlignment: MainAxisAlignment.spaceBetween,
          children: [
            const Text('Transação', style: TextStyle(color: Colors.white70, fontSize: 16)),
            TextButton(
              onPressed: () {
                Navigator.pushNamed(context, '/finance');
              },
              child: const Text('Ver tudo >', style: TextStyle(color: Color(0xFFF3C300))),
            )
          ],
        ),
        const SizedBox(height: 10),
        _TransactionTile(
          title: 'Comida',
          amount: '-R\$ 805,87',
          background: const Color(0xFF7FE3AE),
          icon: Icons.restaurant,
        ),
        const SizedBox(height: 12),
        _TransactionTile(
          title: 'Transporte',
          amount: '-R\$ 353,54',
          background: const Color(0xFFC7A8FF),
          icon: Icons.directions_car,
        ),
      ],
    );
  }
}

class _TransactionTile extends StatelessWidget {
  final String title;
  final String amount;
  final Color background;
  final IconData icon;
  const _TransactionTile({required this.title, required this.amount, required this.background, required this.icon, Key? key})
      : super(key: key);

  @override
  Widget build(BuildContext context) {
    return Container(
      height: 64,
      decoration: BoxDecoration(
        color: background,
        borderRadius: BorderRadius.circular(14),
      ),
      padding: const EdgeInsets.symmetric(horizontal: 12),
      child: Row(
        mainAxisAlignment: MainAxisAlignment.spaceBetween,
        children: [
          Row(
            children: [
              CircleAvatar(
                radius: 20,
                backgroundColor: Colors.white.withOpacity(0.14),
                child: Icon(icon, color: Colors.white),
              ),
              const SizedBox(width: 12),
              Text(title, style: const TextStyle(color: Colors.black, fontWeight: FontWeight.w600)),
            ],
          ),
          Text(amount, style: const TextStyle(color: Colors.black87, fontWeight: FontWeight.w700, fontSize: 16)),
        ],
      ),
    );
  }
}

// --- WIDGET DE NOTIFICAÇÃO ATUALIZADO ---
// Agora aceita uma cor (color) e ícone (icon) específicos para personalizar
class _NotificationItem extends StatelessWidget {
  final String title;
  final String subtitle;
  final String amount;
  final IconData icon;
  final Color color; // Cor personalizada

  const _NotificationItem({
    required this.title,
    required this.subtitle,
    required this.amount,
    required this.icon,
    required this.color,
  });

  @override
  Widget build(BuildContext context) {
    return Container(
      margin: const EdgeInsets.only(bottom: 15),
      child: Row(
        children: [
          Container(
            padding: const EdgeInsets.all(10),
            decoration: BoxDecoration(
              // Usamos a cor passada (igual a dos cards)
              color: color, 
              shape: BoxShape.circle,
            ),
            child: Icon(
              icon,
              // Ícone preto ou cinza escuro para dar contraste no verde/roxo pastel
              color: Colors.black54, 
              size: 20,
            ),
          ),
          const SizedBox(width: 15),
          Expanded(
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                Text(title, style: const TextStyle(color: Colors.white, fontWeight: FontWeight.w600, fontSize: 15)),
                const SizedBox(height: 4),
                Text(subtitle, style: const TextStyle(color: Colors.white54, fontSize: 12)),
              ],
            ),
          ),
          Text(
            amount,
            style: TextStyle(
              // O texto do valor segue a cor do ícone para combinar
              color: color,
              fontWeight: FontWeight.bold,
            ),
          ),
        ],
      ),
    );
  }
}